{% extends 'call_of_project/layout.html.twig' %}

{% block h1_content %}
    {{ 'app.call_of_project.show_permissions.h1'|trans }}
{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary mr-3">{{ 'app.action.save'|trans }}</button>
                <a href="{{ path('app.call_of_project.show_permissions', {'id' : call_of_project.id}) }}" class="text-muted">
                    {{ 'app.action.canceled'|trans }}
                </a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}