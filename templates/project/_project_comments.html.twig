<div class="card">
    <div class="card-header">
        <h3>Commentaires</h3>
    </div>
    <div class="card-body">
        <div class="mb-4 pb-2 clearfix border-bottom">
            <button class="btn btn-primary float-right"
                    data-toggle="modal"
                    data-target="#add-comment-to-project-form-modal"
                    type="button"
            >
                Ajouter
            </button>
        </div>
        <div>
            {% for comment in project.comments %}
                <div class="mb-3">
                    <small>{{ comment.createdAt|date('d/m/Y H:i:s') }}
                        par {{ comment.user.lastName }}  {{ comment.user.firstName }}</small>
                    <div style="border-radius: 10px;" class="alert alert-default-info">
                        <p style="margin-left: 10px; padding: 5px;">{{ comment.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


