
{% set field = form.children[project_form_widget.position] %}

{% if instanceof(project_form_widget.widget, 'App\\Widget\\FormWidget\\FormWidgetInterface') %}
    {% if project_form_widget.widget.visibilityLabel %}
        {{ form_label(field, null, {'label_attr' : {'class' : 'py-1 text-bold'}}) }}
