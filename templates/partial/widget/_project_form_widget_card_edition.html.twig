<div class="col-12" id="widget-card-{{ project_form_widget.id }}" data-widget-edit="{{ widget_edit|default(false) }}"
     data-url="{{ path('app.widget.update_position', {'id' : project_form_widget.id }) }}"
>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-12 text-center sortable-handle">
                    <i class="fas fa-ellipsis-h text-gray" style="font-size: 25px"></i>
                </div>
                <div class="col-11 d-flex flex-column justify-content-center">
                    {{ include('partial/widget/_render_widget.html.twig') }}
                </div>
                <div class="col-1 d-flex flex-column justify-content-center align-items-end">
                    <button type="button" class="btn btn-sm btn-primary my-1 widget-button rounded-circle"
                            data-toggle="modal"
                            data-target="#widget-form-modal"
                            data-url="{{ path('app.widget.edit', {
                                'id' : project_form_widget.id
                            }) }}"
                            title="{{ 'app.action.edit'|trans }}"
                    >
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-warning my-1 widget-button text-white rounded-circle"
                            title="{{ 'app.action.duplicate'|trans }}"
                    >
                        <i class="far fa-clone"></i>
                    </button>

                    <div class="project-form-widget-delete" title="{{ 'app.action.delete'|trans }}">

                        {# this is to prevent weird behavior due to html form nested #}
                        {% if loop is defined and loop.first %}
                            <form action=""></form>
                        {% endif %}

                        {% if project_form_widget.projectFormLayout.isTemplate %}
                            {{ include('project_form_layout/_delete_form.html.twig') }}
                        {% else %}
                            {{ include('widget/_trash_toggle_form.html.twig', {
                                'widget' : project_form_widget,
                                'content' : '<i class="fa fa-trash"></i>',
                                'class' : 'widget-button'
                            }) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>