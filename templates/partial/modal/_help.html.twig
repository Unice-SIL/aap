<div class="modal fade" id="help-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'app.help.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div id="help-search-prepend" class="input-group-text">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                    <input id="help-search" type="text" placeholder="{{ 'app.help.placeholder'|trans }}" class="form-control" data-action="{{ path('app.help.search') }}">
                </div>
                <div id="help-results" class="pt-4"></div>
            </div>
        </div>
    </div>
</div>