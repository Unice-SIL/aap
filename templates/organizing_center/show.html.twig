{% extends 'admin_layout.html.twig' %}

{% block title %}
    {{ 'app.admin.organizing_center.show.h1'|trans }} {{ organizing_center.name }}
{% endblock %}

{% block h1_content %}
    {{ 'app.admin.organizing_center.show.h1'|trans }} {{ organizing_center.name }}
{% endblock %}

{% block content %}

    <dl>
        <dt>{{ 'app.organizing_center.property.name.label'|trans }}</dt>
        <dl>{{ organizing_center.name|humanize_data }}</dl>
    </dl>
    <dl>
        {% for permission in constant('App\\Entity\\Acl::PERMISSION_BASES')  %}
            <dt>{{ ('app.acl.constant.' ~ permission)|trans }}</dt>
            <dl>{{ organizing_center.acls|filter(acl => acl.permission == permission)|map(acl => acl.user.username)|array_unique|join(', ')|humanize_data }}</dl>
        {% endfor %}
    </dl>

    <a href="{{ path('app.admin.organizing_center.index') }}" class="btn btn-secondary">{{ 'app.action.back_to_list'|trans }}</a>

    <a href="{{ path('app.admin.organizing_center.edit', {'id': organizing_center.id}) }}" class="btn btn-primary">{{ 'app.action.edit'|trans }}</a>

{% endblock %}
