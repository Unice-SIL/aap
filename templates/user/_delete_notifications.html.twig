<form method="post" action="{{ path('app.user.delete_notifications', {'id' : app.user.id}) }}">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
    <button
            class="btn btn-sm alert-button-modal btn-danger"
            data-modal-title="{{ 'app.notifications.modal.remove_warning_title'|trans }}"
            data-modal-warning-label="{{ 'app.notifications.modal.remove_warning_label_button'|trans }}"
            data-modal-warning-class="btn btn-danger"
    ><i class="fa fa-trash"></i></button>
</form>
