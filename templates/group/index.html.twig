{% extends 'admin_layout.html.twig' %}

{% block title %}
    {{ 'app.admin.group.index.h1'|trans }}
{% endblock %}

{% block h1_content %}
    {{ 'app.admin.group.index.h1'|trans }}
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <div class=" py-3">
                {#<a href="{{ path('app.admin.group.new') }}" class="btn btn-primary float-right">{{ 'app.action.new'|trans }}</a>#}
                <div class="clearfix"></div>
            </div>
            <table class="table dataTable"
                   data-translation-url="{{ asset('/build/dataTable.' ~ app.request.locale ~ '.json') }}"
            >
                <thead>
                <tr>
                    <th>{{ 'app.group.property.name.label'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for group in groups %}
                    <tr>
                        <td>
                            <a {#href="{{ path('app.admin.group.show', { 'id' : group.id}) }}"#}>
                                {{ group.name }}
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
